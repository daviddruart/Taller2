#include <stdio.h>

int main() {
    // Declaraci칩n de variables
    double base1, base2, altura, area;

    // Solicitar al usuario que ingrese la longitud de las bases y la altura
    printf("Bienvenido, calcula el 치rea de un trapezoide\n ");
    printf("Ingrese la longitud de la BASE MAYOR del trapezoide: ");
    scanf("%lf", &base1);
    printf("Ingrese la longitud de la BASE MENOR del trapezoide: ");
    scanf("%lf", &base2);
    printf("Ingrese la ALTURA del trapezoide: ");
    scanf("%lf", &altura);

    // Calcular el 치rea del trapezoide
    area = ((base1 + base2) * altura) / 2;

    // Mostrar el resultado
    printf("El 치rea del trapezoide es: %.2lf\n", area);

    return 0;
}
